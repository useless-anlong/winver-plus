{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "winver-plus",
    "version": "0.1.0",
    "identifier": "plus.winver.lesya.one",
    "build": {
        "beforeDevCommand": "yarn vite dev",
        "beforeBuildCommand": "yarn vite build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../src"
    },
    "plugins": {
        "allowlist": {
            "shell": {
                "all": true,
                "open": true
            }
        }
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "关于 Windows",
                "decorations": false,
                "width": 680,
                "height": 490,
                "url": "http://localhost:5173",
                "resizable": false,
                "center": true,
                "transparent": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}